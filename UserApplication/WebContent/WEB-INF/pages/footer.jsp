<%@ page language="java" contentType="text/html; charset=ISO-8859-1" pageEncoding="ISO-8859-1" %>
	<section class="">
		<!-- Footer -->
		<footer class="text-center text-md-start --footer">
			<!-- Grid container -->
			<div class="container-fluid p-4 --footer">
				<!--Grid row-->
				<div class="row">
					<!--Grid column-->
					<div class="col-lg-4 --margin-top">
						<div id="map-canvas" class='--footer-map'></div>
					</div>
					<!--Grid column-->
					<div class="col-lg-1">
					</div>
					<div class="col-lg-2 --margin-top text-left">
						<h4>Contact info</h4>
						<br />
						<p>Phone: 041/123-123</p>
						<p>Fax: 12412412412451</p>
					</div>
					<div class="col-lg-1">
					</div>
					<!--Grid column-->
					<div class="col-lg-4 --margin-top">
						<div class="container-fluid --contact-form">
							<div class="row">
								<div class="col-12">
									<div class="well well-sm">
										<form class="form-horizontal" action="" method="post">
											<fieldset>
												<h4 class="text-center">Contact us</h4>
												<!-- Name input-->
												<div class="form-group row">
													<label class="col-4 control-label" for="name">Name</label>
													<div class="col-8">
														<input id="name" name="name" type="text" placeholder="Your name"
															class="form-control">
													</div>
												</div>
												<!-- Email input-->
												<div class="form-group row">
													<label class="col-4 control-label" for="email">Your
														E-mail</label>
													<div class="col-8">
														<input id="email" name="email" type="text"
															placeholder="Your email" class="form-control">
													</div>
												</div>
												<!-- Message body -->
												<div class="form-group row">
													<label class="col-4 control-label" for="message">Your
														message</label>
													<div class="col-8">
														<textarea class="form-control" id="message" name="message"
															placeholder="Please enter your message here..."
															rows="5"></textarea>
													</div>
												</div>
												<!-- Form actions -->
												<div class="form-group">
													<div class="col-12 text-right">
														<button type="submit"
															class="btn --send-message-button">Submit</button>
													</div>
												</div>
											</fieldset>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!--Grid column-->
				</div>
				<!--Grid row-->
			</div>
			<!-- Grid container -->
			<!-- Copyright -->
			<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
				<a class="text-white">@ETFBL All rights reserved</a>
			</div>
			<!-- Copyright -->
		</footer>
		<!-- Footer -->
	</section>